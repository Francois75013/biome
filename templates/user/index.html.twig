	<main>
		<h1>Mon profil</h1>

		{% if app.user is null %}
			<h1 class="h3 mb-3 font-weight-normal"><a href="{{ path('security') }}">Connecte toi</a></h1><br>
			<h1 class="h3 mb-3 font-weight-normal">Pas encore de compte ?<a href="{{ path('registration') }}">Inscris toi !</a>
			</li>
		</h1>
	{% else %}
		{{ app.user.username }},
		<a href="{{ path('app_logout') }}">Déconnexion</a><br>
		<img  src="{{ asset('images/')~app.user.avatar }}"/>
