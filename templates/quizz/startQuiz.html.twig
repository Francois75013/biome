{% extends 'base.html.twig' %}

{% block title %}Biome - Les th√®mes
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<main>

		

		<div class="row">
			<div class="col-2">
				<p class="question_8_number">
					<div id="root"></div>
			</div>
			<div class="col-sm-8 question_8_txt">
				<p>{{ question.question }}</p><br>
				

				<form action="" method="POST">

					{% for reponse in question.Reponses %}

						<input id="r1" type="radio" name="selectReponse" required="required" value="{{ reponse.isTrue }}">
						<label for="r1" class="p-3 border rounded-3 question_8_prop">
							<div>{{ reponse.reponse }}</div>
						</label><br>
						
					{% endfor %}
					<button class="validate" name="validate">Valider</button>
				</div>
			</div>


		</p>
	</form>

	

   
	

</main>

{% endblock %}
