{% block stylesheets %}


<link rel="stylesheet" href="/css/question.css">

{% endblock %}
{% block body %}
<body class="p-3 question_body">

<!--Debut du header-->

<!--Mettre le header-->

<!--Fin du header-->

<main>

<div class="container-lg p-3 question_fond question_img"> <div
	class="row">
	<!--nombre question-->
	<div class="col-2">
		<p class="question_number">{{tour}}/10</p>
		{# <p class="question_number">Passage : {{ passage }}</p> #}
	</div>
	{% if passage == 0 %}
		<div class="col-sm-8">
		<p class="question_txt">{{ question.question }}</p>

		<div
			class="col-2"><div id="root"></div>
		</div>

		<!--4 propositions-->
		<form action="" method="POST">
			<div class="row gy-3">

				<div class="col-sm-12 gy-5">
					<div>

						{% for reponse in question.Reponses %}

							<input class="mb-4" id="r{{ reponse.id }}" type="radio" name="selectReponse" required="required" value="{{ reponse.isTrue }}">
							<label for="r{{ reponse.id }}" class="p-3 border border rounded-pill question_prop">
								<div>{{ reponse.reponse }}</div>
							</label>

						{% endfor %}

					</div>
				</div>
			</div>


			<p class="question_valider">
				<button class="question_bouton" name="button">Valider<img class="question_icone" src="/images/images_question/valider.png" alt="valider"></button>
			</p>
		</form>
	</div>
	{% else %}


		<div class="container-lg p-3 reponse_fond reponse_img">

<div class="row">
	<div class="col-2">
		<p class="reponse_number">{{tour}}/10</p>
	</div>
	<div class="col-sm-8">
	{% if  reponseIsTrue  %}
		<p class="reponse_titre" style="font-family: 'muli','sans-serif'; text-align: center; color: #57CB69; font-size: 2.188em; font-weight: 900;" >Vrai !</p>
		{% else %}
		<p class="reponse_titre_bis" style="font-family: 'muli','sans-serif'; text-align: center; color: red; font-size: 2.188em; font-weight: 900;">Faux !</p
		{% endif %}
		<div class="row gy-3">

	<div class="g-5">
		
					
			
			
	<div class="g-5">
				
					<p class="reponse_txt" style="font-family: 'muli','sans-serif';
font-size: 1.25em;
text-align: center;" >{{description}}</p>
				
			</div>

			
		</div>
	</div>

</div>


</div>


	<form action="" method="POST">
		<p class="question_valider">
			<div class="reponse_suivante" style="display: inline-block;
vertical-align: middle;
text-decoration: none;
font-family: 'nunito', sans-serif;
font-size: 1.25em;
font-weight: 800;
color: #ff7255;">
	<button class="question_bouton reponse_questionsuivante" name="button">Question suivante<img class="question_icone" src="/images/images_question/valider.png" alt="valider"></button>
</div>
		</p>
	</form>
	{% endif %}
	
</main>

