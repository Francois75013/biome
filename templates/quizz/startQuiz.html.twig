	<main>

		<div class="container-lg p-3 question_fond question_img"> <div
			class="row">
			<!--nombre question-->
			<div class="col-2">
				<p class="question_number">{{tour}}/10</p>
				{# <p class="question_number">Passage : {{ passage }}</p> #}
			</div>
			{% if passage == 0 %}
				<div class="col-sm-8">
				<p class="question_txt">{{ question.question }}</p>

				<div
					class="col-2"><div id="root"></div>
				</div>

				<!--4 propositions-->
				<form action="" method="POST">
					<div class="row gy-3">

						<div class="col-sm-6 gy-5">
							<div>

								{% for reponse in question.Reponses %}

									<input class="mb-4" id="r{{ reponse.id }}" type="radio" name="selectReponse" required="required" value="{{ reponse.isTrue }}">
									<label for="r{{ reponse.id }}" class="p-3 border border rounded-pill question_prop">
										<div>{{ reponse.reponse }}</div>
									</label>

								{% endfor %}

							</div>
						</div>
					</div>


					<p class="question_valider">
						<button class="question_bouton" name="button">Valider<img class="question_icone" src="/images/images_question/valider.png" alt="valider"></button>
					</p>
				</form>
			</div>
			{% else %}

			{# {% block stylesheets %}

<link rel="stylesheet" href="/css/reponse.css">

{% endblock %} #}

