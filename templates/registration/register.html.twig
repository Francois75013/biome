    <link rel="stylesheet" href="/css/inscription.css" />

{% endblock %}
{% block body %}
{% for flashError in app.flashes('verify_email_error') %}
	<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
<div class="body-profil">
{{ form_start(registrationForm) }}
{{ form_widget(registrationForm._token) }}

  {# <form methode="post" class="inscription_form"> #}
  <div class="container-profil" style="border-radius: 30px">
    <div class="main-profil">
      <div class="image-compris"><img src="../images/images_inscription/robot_livre.png"/></div>
        <div class="titre-inscription">
          <h2>Inscription</h2>
        
          <p>{{ form_errors(registrationForm) }}</p>
      
            <h3>Choisi ton pseudo et ton mot de passe :</h3>
        </div>
        <div class="container-profil">
                <div class="mb-3">

        {{ form_widget(registrationForm.username, {
            'attr': {'type':'text','class':'form-control' , 'placeholder':'Ton pseudo', 'id':'exampleInputEmail1'} }) }}
                  <div id="emailHelp" class="form-text"></div>
                </div>
                <div class="mb-3">
          
        {{ form_widget(registrationForm.plainPassword, {
            'attr': {'type':'password','class':'form-control' , 'placeholder':'Ton mot de passe', 'id':'exampleInputPassword1'} }) }}
                </div>
              </form>
        </div>
    </div>
<!-- fin de la 1ere partie -->


  <div class="titre-choix-avatar">
    <h2>Choisis ton avatar</h2>
  </div>
  {{ form_widget(registrationForm.avatar) }}

      <div class="container-choix-avatar">
        <div class="row">

          <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
             <div class="bip1 "><img class="choice_avatar" src="../images/images_inscription/avatar_5.png" alt="robot"> </div> 
          </div>


          <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <div class="bip2 "><img class="choice_avatar" src="../images/images_inscription/avatar_6.png" alt="robot" /></div>
          </div>

          <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <div class="bip3 "><img class="choice_avatar" src="../images/images_inscription/avatar_7.png" alt="robot"></div>
          </div>

          <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <div class="bip4  "><img class="choice_avatar" src="../images/images_inscription/avatar_8.png" alt="robot"></div>
          </div>
 
          <div class="au-suivant">
            <button type="button" class="btn-inscription-profil btn" data-bs-toggle="modal" data-bs-target="#popupValidation">Valider</button>
          </div>
        </div>
      </div>

 
  <!--Popup-->
  <div class="modal fade" id="popupValidation" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <img src="../images/images_inscription/robot_attention.png" alt="Robot attention">
          <h5 class="modal-title text-center" id="exampleModalLabel">Attention</h5>
        </div>
        <div class="modal-body">
          <p>Retiens bien ton pseudo et ton mot de passe !</p>
          <p>Ils te permettront de jouer aux quiz et d’enregistrer tes scores.</p>
          <p>Si tu les perds, tu devras recréer un compte.</p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary popup_bouton">J'ai compris</button>
        </div>
      </div>
    </div>
  </div>
 {{ form_end(registrationForm) }}
 </div>
  <script type="text/javascript">

        let fieldHidden = document.getElementById('registration_form_avatar');
        let images = document.getElementsByClassName('choice_avatar');

        for(var i = 0; i < images.length; i++) { 
             (function(index) {
                 images[index].addEventListener("click", function() {
                       fieldHidden.value = images[index].src.split('/')[5];
                        })
                        })(i);
                         }
</script>
